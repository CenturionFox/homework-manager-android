<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="style_listview_layout">
        <item name="android:layout_marginLeft">@dimen/margin_listview_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_listview_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_listview_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_listview_vertical</item>
    </style>
    <style name="style_listview_text_default">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>
    <style name="style_listview_text_small">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    
</resources>
